//////// Lo que nuestros clientes dicen ///////
.quienes-somos-view__clientes__title {
  margin: 40px 0 57px;
  color: #313b4b;
  font-size: remify(30px);
  text-align: center;
}

.quienes-somos-view__clientes__carousel {
  margin: 0 0 75px 0;
}

.clientes-carousel__container {
  margin: 0 180px
  position: relative;
    .draggable {
      padding: 30px !important;
    }
    .slick-center {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #29313f;
      transform: scale(1.08);
      transition: transform .5s ease;
    } 

    .slick-active {
      transition: transform 0.3s ease;
    }
    .slick-dots {
      li {
        margin: 0 -5px 0;
      }
    }
    .slick-slide {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #29313f;  
    }
    .slick-dots li button:before {
      font-family: 'slick';
      font-size: 7px;
      line-height: 20px;
      position: absolute;
      top: 0;
      left: 0;
      width: 20px;
      height: 20px;
      content: 'â€¢';
      text-align: center;
      opacity: 1;
      color: #d8d8d8;         
    }
    .slick-dots li.slick-active button:before {
      opacity: 1;
      color: #62ceca;
  }  
    .arrow-left, .arrow-right {
    position: absolute;
    top: 50%;
    cursor: pointer;
  }
    .arrow-right {
      left: 103%;
      padding: 0 0 0 2.18em;
    }
    .arrow-left {
      right: 103%;
      padding: 0 2.18em 0 0;
    }
}
    
.nc-carousel-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 500px;
  height: 300px;
  padding: 80px 50px;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.5);
  outline: none;
    .nc-city {
      color: #dcdcdc;
      font-size: remify(10px);
    }  
    .nc-name {
      color: #62ceca;
      font-size: remify(12px);
    }
    .nc-ruler {
      border-top: solid 1px #bdbdbd;
      width: 75.59%;
    }
    .nc-testimonial {
      color: #ffffff;
      font-size: remify(12px);
      line-height: 1.33;
      text-align: center;
    }
}