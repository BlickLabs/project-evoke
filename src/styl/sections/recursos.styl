.recursos-view 
  padding 82px 0 175px
  display flex
  flex-direction column
  justify-content center
  align-items center

.recursos-view__title 
  font-size remify(45px)
  color #303a4a
  text-align center
  margin 76px 0 42px

.recursos-view__hr 
  border-top solid 1px #eaeaea
  width calc(100% - 230px)

.recursos-view__number 
  margin 56px 0 88px
  width  670px
  display flex
  justify-content space-around

.recursos-view__number-box 
  width 117px
  height 35px
  display flex
  justify-content center
  align-items center
  flex-wrap wrap
  font-size remify(12px)
  color #ffffff
  background-color #2d3645

.recursos-view__number-box:hover 
  background-color #e50075
  cursor pointer

.recursos-view__container 
  display flex
  flex-wrap wrap
  justify-content space-between
  max-width 1048px
  padding 0 125px 0

.recursos-view__container-card 
  position relative
  width 251px
  height 302px
  background-color #f3f3f4
  margin 0 0 20px
  cursor pointer

.recursos-view__container-card-info 
  padding 10px 20px 0
  line-height 1.2

.recursos-view__container-card__post
  color #929292
  font-size remify(11px)

.recursos-view__container-card__title
  color #2d3746
  font-size remify(13px)

.recursos-view__container-card-mask
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  transition 0.5s ease
  background-image url(../img/recursos_hover.svg)

.recursos-view__container-card-mask:hover
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 0.83
  transition 0.5s ease
  background-image url(../img/recursos_hover.svg)

.recursos-view__container-card-mask__content
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center
  padding 111px 26px 156px

.mask-paragraph-recursos 
  color #ffffff
  font-size remify(13px)

.mask-post-recursos
  font-size remify(11px)
  margin-top 7px 

.mask-post-recursos span:nth-child(1)
  color #e3e3e3

.mask-post-recursos span:nth-child(2)
  color #e50075