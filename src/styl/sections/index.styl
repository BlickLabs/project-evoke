  margin: 0
  padding: 0

.carousel-1
  position: relative;
  width: 100%;

.slick-slide img
  max-width 100%;

.index-banner
  position: absolute;
  display: flex; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-left: auto;
  margin-right: auto;
  margin-top: auto;
  margin-bottom: auto;

.index-banner-box1
  display: flex;
.index-banner-box1__title1
  color: #ffffff;
  font-size: remify(45px);
  text-align: center;

.index-banner-box1__title2
  color: #fc4e44;
  font-size: remify(45px);
  text-align: center;
  padding-left: remify(13px);

.index-banner-box2__title_3
