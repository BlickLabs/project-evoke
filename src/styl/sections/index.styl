* {
  margin: 0;
  padding: 0;
  list-style: none;
}

a {
  text-decoration: none;
}

// Main Button
.main-button {
  display: flex;
  justify-content: center;
  align-items: center;
  text-transform: uppercase;
  font-size: remify(10px);
  color: #ffffff;
  background-color: #fc4e44;
  width: 130px;
  height: 35px;
  border-radius: 28px;
  cursor: pointer;
}

// Carousel 
.carousel-1 {
  position: relative;
  max-width: 100%;
    // Slick Carousel
    .slick-slide {
       max-width: 100%;
       min-height: 100vh;
  }

    .slick-dots {
      position: absolute;
      bottom: 4%;
      left: 45%;
      display: block;
      width: 100%;
      padding: 0;
      margin: 0;
      list-style: none;
      text-align: center;
        li {
          margin: 0 -3px 0 
      }
  }

    .slick-dots li button:before {
      font-family: 'slick';
      font-size: 10px;
      line-height: 20px;
      position: absolute;
      top: 0;
      left: 0;
      width: 20px;
      height: 20px;
      content: 'â€¢';
      text-align: center;
      opacity: 1;
      color: #e14b45;
  }

     .slick-dots li.slick-active button:before {
       opacity: 1;
      color: #d8d8d8;
  }

      .slick-dotted.slick-slider {
        margin-bottom: 0;
  }
}

.section-carousel-1__bg {
  background-image: url(../img/banner_index_elon.png)
  background-size: cover;
  background-repeat: no-repeat;
  background-position: right;
}

//////////////// Title /////////////
.index-banner {
  position: absolute;
  display: flex; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-left: auto;
  margin-right: auto;
  margin-top: auto;
  margin-bottom: auto;
}

.index-banner-box1 {
  display: flex;
  position: relative;
}

.index-ruler {
   border: solid 1px #f3f3f4;
   width: 14.43em;
   position: absolute;
   left: 50%;
}

.index-banner-box1__title1 {
  color: #ffffff;
  font-size: remify(45px);
  text-align: center;
}

.index-banner-box1__title2 {
  color: #fc4e44;
  font-size: remify(45px);
  text-align: center;
  padding-left: remify(13px);
}

.index-banner-box2 {
  position: relative;
  max-width 500px;
}

.index-banner-box2__title_3 {
  color: #ffffff;
  font-size: remify(23px);
  text-align: center;
  margin-top: 48px;
  line-height: 1.5;
}

.index-banner-box3 {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 0
    .circle {
      width: 5px;
      height: 5px;
      background-color: #ffffff;
      border-radius: 100px;
    }
    .stick {
      width: 1px;
      height: 65px;
      background-color: #ffffff;
    }
}

////////////// Conoce mas //////////////
.index-somos {
  margin-top: 85px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.index-somos-box1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 591px;
  text-align: center;
