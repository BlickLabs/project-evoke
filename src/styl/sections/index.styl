.somos-button {
  margin: 64px 0 0
}
//////////// Servicios /////////////
.servicios {
  background-image: url(../img/dali_background.png)
  background-repeat: no-repeat;
  background-size: contain;
  background-position: bottom left;
  width: 100%;
  padding 45px 0 119px;
}

.servicios-title {
  text-align: center;
  color: #2d3746;
  font-size: remify(30px);
}

.servicios-container {
  max-width: 50em;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 65px 0 0;
  center-block();
}

.servicios__card {
  display: flex;
  flex-direction: column;
  width: 18.31em;
  align-items: center;
  position: relative;
    p {
