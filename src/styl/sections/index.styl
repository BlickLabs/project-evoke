* {
  margin: 0;
  padding: 0;
  list-style: none;
}

a {
  text-decoration: none;
}
// 
.carousel-1 {
  position: relative;
  width: 100%;
}

.slick-slide img {
  max-width 100%;
}

.index-banner {
  position: absolute;
  display: flex; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-left: auto;
  margin-right: auto;
  margin-top: auto;
  margin-bottom: auto;
}

.index-banner-box1 {
  display: flex;
}

.index-banner-box1__title1 {
  color: #ffffff;
  font-size: remify(45px);
  text-align: center;
}

.index-banner-box1__title2 {
  color: #fc4e44;
  font-size: remify(45px);
  text-align: center;
  padding-left: remify(13px);
}

.index-banner-box2__title_3 {
  color: #ffffff;
  font-size: remify(23px);
  text-align: center;
  margin-top: 48px;
}

.index-somos {
  margin-top: 85px;
  display: flex;
  justify-content: center;
}

.index-somos-box1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 591px;
  text-align: center;
    p {
      color: #2d3746;
      font-size: remify(15px);
      line-height: 1.47;
    }
    span {
      margin-top: 53px;
      display: flex;
      justify-content: center;
      align-items: center;
      text-transform: uppercase;
      font-size: remify(10px);
      color: #ffffff;
      background-color: #fc4e44;
      width: 130px;
      height: 35px;
      border-radius: 28px;
      cursor: pointer;
    }
}
