/////// Mastermind /////////
.mastermind-view__main {
  margin: 103px 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-image: url(../img/mastermind_banner.png);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
    .mastermind-view__main-title {
      color: #2d3645;
      font-size: remify(30px);
      margin: 65px 0 0;
    }
    span {
      color: #acacac;
      font-size: remify(23px);
      margin: 15px 0;
    }
    .mastermind-view__main-subtitle {
      color: #2d3746;
      font-size: remify(15px);
      text-align: center;
      line-height: 1.47;
      width: 46.87em;
      margin: 0 0 75px 0;
    }
}

/////////// Una idea vieja ... ////////////
.mastermind-view__idea-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #2d3645;
  padding: 82px 0 100px;
}

.mm-box1 {
  display: flex;
  flex-direction: column;
  width: 420px;
  p {
    color: #ffffff;
    font-size: remify(30px);
    line-height: 1.23;
  }
  .mm-box1__ruler {
    border-top: solid 1px #e9e9e9;    
    width: 85%;
    margin: 18px 0;
  }
  span {
    color: #ffffff;
    font-size: remify(15px);
    line-height: 1.47;
  }
}

.mm-box2 {
  display: flex;
  flex-direction: column;
  border-left: solid 1px #e4e4e4;
    .mm-box2__content {
      display: flex;
      align-items: center;
      margin: 10px 0 0 27px;
        .mm-box2__hex {
          display: flex;
          justify-content: center;
          align-items: center;
          background-image: url(../img/hex_green.svg);
          background-repeat: no-repeat;
          width: 37.8px;
          height: 34.2px;
          color: #2d3645
          font-size: remify(15px);
        }
        p {
          color: #ffffff;
          font-size: remify(15px);
          margin: 0 0 0 15px;
        }
    }
}

.mastermind-view__idea-better {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.mastermind-view__idea-better__container {
  display: flex;
  flex-direction: column;
  position: absolute;
  background-color: #eaeaea;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.32);
  border-radius: 2px;
  width: 46.12em;
  padding: 18px 63px;
    p {
      color: #2d3645;
      font-size: remify(14px);
      text-align: center;
      line-height: 1.29;
    }
    span {
      color: #2d3645;
      font-size: remify(14px);
      align-self: flex-end;
      margin: 10px 0 0;
    }
}

///////// Banner 2 ////////////
.mastermind-view__banner2 {
  background-image: url(../img/mastermind_banner_2.png)
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
  height: 30em;
}

///////////// Dise침o y Planeaci칩n ///////////
.mastermind-view__dp {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.mastermind-view__dp-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 70px 0 23px 0;
    .mastermind-view__dp-title {
      color: #313b4b;
      font-size: remify(30px);
      margin: 0 0 0 18px;
    }
}

.mastermind-view__dp-subtitle {
  color: #2d3746;
  font-size: remify(15px);
  text-align: center;
  width: 786px;
  line-height: 1.47;
  margin: 0 0 75px 0;
}

.dp-hex {
  background-image: url(../img/hex_green.svg);
  background-repeat: no-repeat;
  background-size: contain;
  width: 33.8px;
  height: 30.2px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #2d3645
  font-size: remify(13px);
}

////////// Creaci칩n e implementaci칩n //////////
.mastermind-view__creacion {
  background-color: #2d3645;
}

.mastermind-view__creacion-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.ci-box1 {
  background-image: url(../img/mastermind_classroom.png)
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  width: 21.43em;
  height: 27.81em;
}

.ci-box2 {
  display: flex;
  flex-direction: column;
    .ci-box2__title {
      display: flex;
      align-items: center;
        p {
          color: #ffffff;
          font-size: remify(37px);
          margin: 0 0 0 16px;
        }
    }
    .ci-box2__ruler {
      border-top: solid 1px #e9e9e9;
      margin: 18px 0;
      width: 105%;
    }
    .ci-box2__subtitle {
      p {
        color: #ffffff;
        font-size: remify(15px);
        line-height: 1.47;
        width: 575px;
        text-align: justify;
      }
    }
}