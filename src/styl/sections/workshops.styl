////////// Workshops servicios ///////////
.workshops-view__main {
  margin: 103px 0 0;
  display: flex;
  center-block();
  justify-content: space-between;
}

.workshops-view__box1 {
  display: flex;
  flex-direction: column;
  max-width: 385px;
  margin: 0 0 0 150px;
    .workshops-view__box1-title {
      color: #2d3645;
      font-size: remify(30px);
      margin: 0 0 0 5px;
    }
    .workshops-view__box1-servicios {
      color: #cecece;
      font-size: remify(23px);
      margin: 10px 0 0;
    }
    .workshops-view__box1-subtitle {
      color: #2d3746;
      font-size: remify(15px);
      margin: 15px 0 0;
      line-height: 1.47;
    }
}

.workshops-view__box1-container {
  display: flex;
  align-items: center;
  margin: 45px 0 0;
    .ws-hex {
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: url(../img/servicios_hex.svg);
    background-repeat: no-repeat;
    background-size: contain;
    width: 40px;
    height: 40px;
    }
}

////////// ¿En qué se basan? /////////
